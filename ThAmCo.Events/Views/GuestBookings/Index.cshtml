@model IEnumerable<ThAmCo.Events.Data.GuestBooking>


@{
    int count = 0;
    ViewData["Title"] = "Index";
}

   


<h2>Guest Bookings</h2>



<p>
    <a asp-action="Create" asp-route-Customerid="@ViewData["EventID"]" > Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attended)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        count++;
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attended)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  custId = item.CustomerId, eventId = item.EventId }) |
                @Html.ActionLink("Details", "Details", new {  custId = item.CustomerId, eventId = item.EventId }) |
                @Html.ActionLink("Delete", "Delete", new {  custId = item.CustomerId, eventId = item.EventId })
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <h4>
        Total guests: @count
    </h4>
</div>

